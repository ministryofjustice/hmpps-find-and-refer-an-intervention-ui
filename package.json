{
  "name": "hmpps-find-and-refer-an-intervention-ui",
  "version": "0.0.1",
  "description": "HMPPS Find And Refer An Intervention Ui",
  "repository": "git@github.com:ministryofjustice/hmpps-find-and-refer-an-intervention-ui.git",
  "license": "MIT",
  "scripts": {
    "prepare": "husky",
    "watch-ts": "tsc -w",
    "build": "node esbuild/esbuild.config.js --build",
    "start": "node $NODE_OPTIONS dist/server.js | bunyan -o short",
    "start:dev": "concurrently -k -p \"[{name}]\" -n \"ESBuild,Node\" -c \"yellow.bold,cyan.bold\" \"node esbuild/esbuild.config.js --build --watch\" \"node esbuild/esbuild.config.js --dev-server\"",
    "start-feature": " node $NODE_DEBUG_OPTION --env-file=feature.env dist/server.js | bunyan -o short",
    "start-feature:dev": "concurrently -k -p \"[{name}]\" -n \"ESBuild,Node\" -c \"yellow.bold,cyan.bold\" \"node esbuild/esbuild.config.js  --build --watch \" \"node esbuild/esbuild.config.js --dev-test-server\"",
    "lint": "eslint . --cache --max-warnings 0",
    "lint-fix": "eslint . --cache --max-warnings 0 --fix",
    "typecheck": "tsc",
    "test": "jest",
    "test:ci": "jest --runInBand",
    "security_audit": "npx audit-ci --config audit-ci.json",
    "clean": "rm -rf dist node_modules",
    "rebuild": "npm run clean && npm i && npm run build"
  },
  "engines": {
    "node": "^22.14",
    "npm": "^10"
  },
  "lint-staged": {
    "*.{ts,js,css}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@aws-sdk/client-sqs": "^3.962.0",
    "@microsoft/applicationinsights-clickanalytics-js": "^3.3.10",
    "@microsoft/applicationinsights-web": "^3.3.10",
    "@ministryofjustice/frontend": "^7.1.1",
    "@sentry/node": "^10.32.1",
    "@types/jsonwebtoken": "^9.0.10",
    "agentkeepalive": "^4.6.0",
    "applicationinsights": "^3.12.1",
    "body-parser": "^2.2.1",
    "bunyan": "^1.8.15",
    "bunyan-format": "^0.2.1",
    "compression": "^1.8.1",
    "connect-flash": "^0.1.1",
    "connect-redis": "^9.0.0",
    "csurf": "^1.11.0",
    "express": "^5.2.1",
    "express-session": "^1.18.2",
    "express-validator": "^7.3.1",
    "govuk-frontend": "^5.13.0",
    "helmet": "^8.1.0",
    "http-errors": "^2.0.1",
    "jquery": "^3.7.1",
    "jwt-decode": "^4.0.0",
    "moment-timezone": "^0.6.0",
    "nocache": "^4.0.0",
    "nunjucks": "^3.2.4",
    "passport": "^0.7.0",
    "passport-oauth2": "^1.8.0",
    "redis": "^5.10.0",
    "superagent": "^10.2.3",
    "timezone-support": "^3.1.0"
  },
  "devDependencies": {
    "@jgoz/esbuild-plugin-typecheck": "^4.0.4",
    "@types/bunyan": "^1.8.11",
    "@types/bunyan-format": "^0.2.9",
    "@types/compression": "^1.8.1",
    "@types/connect-flash": "0.0.40",
    "@types/csurf": "^1.11.5",
    "@types/express-session": "^1.18.2",
    "@types/http-errors": "^2.0.5",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.4",
    "@types/nunjucks": "^3.2.6",
    "@types/passport": "^1.0.17",
    "@types/passport-oauth2": "^1.8.0",
    "@types/superagent": "^8.1.9",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "audit-ci": "^7.1.0",
    "aws-sdk-client-mock": "^4.1.0",
    "chokidar": "^3.6.0",
    "concurrently": "^9.2.1",
    "esbuild": "^0.27.0",
    "esbuild-plugin-clean": "^1.0.1",
    "esbuild-plugin-copy": "^2.1.1",
    "esbuild-plugin-manifest": "^1.0.5",
    "esbuild-sass-plugin": "^3.3.1",
    "eslint": "^8.57.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-no-only-tests": "^3.3.0",
    "eslint-plugin-prettier": "^5.5.4",
    "fishery": "^2.4.0",
    "glob": "^12.0.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jest-html-reporter": "^4.3.0",
    "jest-junit": "^16.0.0",
    "jsonwebtoken": "^9.0.3",
    "lint-staged": "^16.2.7",
    "mocha-junit-reporter": "^2.2.1",
    "nock": "^14.0.10",
    "prettier": "^3.7.4",
    "prettier-plugin-jinja-template": "^2.1.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.51.0"
  },
  "overrides": {
    "csurf": {
      "cookie": "1.0.2"
    }
  }
}
